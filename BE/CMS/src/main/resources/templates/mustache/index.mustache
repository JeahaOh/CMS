{{>mustache/layout/header}}
<h1>title</h1>
<div class="col-md-12">
  
  <div class="row">
    <div class="col-md-6">
      <a href="/posts/save" role="button"
        class="btn btn-primary">regist post</a>
    </div>
  </div>

  <table class="table table-horizontal table-bordered">
    <thead class="thead-strong">
      <tr>
        <th>no</th>
        <th>title</th>
        <th>author</th>
        <th>last modi date</th>
      </tr>
    </thead>
    <tbody id="tbody">
      {{#posts}}
        <tr>
          <td>{{id}}</td>
          <td>
            <a href="/posts/update/{{id}}">
              {{title}}
            </a>
          </td>
          <td>{{author}}</td>
          <td>{{modifiedDate}}</td>
        </tr>
      {{/posts}}
    </tbody>
  </table>
</div>
{{>mustache/layout/footer}}